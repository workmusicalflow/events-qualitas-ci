<div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300">
    <div class="relative">
        <img src="{{ speaker.photo }}" 
             alt="{{ speaker.name }}" 
             class="w-full h-64 object-cover">
        
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/75 to-transparent p-4">
            <h3 class="text-white text-xl font-bold">{{ speaker.name }}</h3>
            <p class="text-gray-200 text-sm">{{ speaker.position }}</p>
        </div>
    </div>

    <div class="p-6">
        <div class="flex items-center space-x-2 mb-4">
            <i class="fas fa-building text-blue-900"></i>
            <p class="text-gray-600">{{ speaker.company }}</p>
        </div>

        <div class="flex space-x-4">
            <a href="#" class="text-gray-400 hover:text-blue-900">
                <i class="fab fa-linkedin-in"></i>
            </a>
            <a href="#" class="text-gray-400 hover:text-blue-900">
                <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="text-gray-400 hover:text-blue-900">
                <i class="fas fa-globe"></i>
            </a>
        </div>
    </div>
</div>
