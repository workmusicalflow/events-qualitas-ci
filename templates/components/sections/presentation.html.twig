{# Section de présentation de l'événement #}
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            {# Introduction #}
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-blue-900 mb-8">
                    <i class="fas fa-calendar-star mr-2"></i>
                    Programme du Forum
                </h2>
                <p class="text-2xl text-gray-700 leading-relaxed mb-8">
                    {{ event.presentation.intro }}
                </p>
                <p class="text-xl text-gray-600 mb-12">
                    {{ event.presentation.description }}
                </p>
            </div>

            {# Programme et Objectif #}
            <div class="grid md:grid-cols-2 gap-8 mb-16">
                {# Programme #}
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-8 rounded-lg shadow-sm">
                    <h3 class="text-xl font-bold text-blue-900 mb-6 flex items-center">
                        <i class="fas fa-calendar-check mr-2"></i>
                        Au programme
                    </h3>
                    <ul class="space-y-4">
                        {% for item in event.presentation.programme %}
                            <li class="flex items-start group">
                                <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center bg-blue-900 text-white rounded-full mr-3 group-hover:bg-blue-700 transition-colors">
                                    {{ loop.index }}
                                </span>
                                <span class="text-gray-700 group-hover:text-gray-900 transition-colors">
                                    {{ item }}
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

                {# Objectif #}
                <div class="bg-gradient-to-br from-green-50 to-green-100 p-8 rounded-lg shadow-sm">
                    <h3 class="text-xl font-bold text-green-900 mb-6 flex items-center">
                        <i class="fas fa-bullseye mr-2"></i>
                        Notre objectif
                    </h3>
                    
                    {# Image d'illustration #}
                    <div class="mb-6 rounded-lg overflow-hidden">
                        <picture>
                            <source srcset="/images/sections/presentation/objectif.webp" type="image/webp">
                            <img src="/images/sections/presentation/objectif.jpg" 
                                 alt="Illustration des objectifs du forum QSHE"
                                 class="w-full h-48 object-cover rounded-lg transform hover:scale-105 transition-transform duration-300"
                                 loading="lazy"
                                 width="600"
                                 height="400">
                        </picture>
                    </div>
                    
                    <div class="prose prose-lg">
                        <p class="text-gray-700 leading-relaxed">
                            {{ event.presentation.objectif }}
                        </p>
                    </div>
                </div>
            </div>

            {# Bouton d'action #}
            <div class="text-center">
                <a href="https://events-qualitas-ci.com/formulaire.html" 
                   class="inline-flex items-center bg-blue-900 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300">
                    <i class="fas fa-id-badge mr-2"></i>
                    <span>Générer mon badge de visite</span>
                </a>
            </div>
        </div>
    </div>
</section>

{# Styles spécifiques au composant #}
{% block component_styles %}
<style>
    @media (prefers-reduced-motion: reduce) {
        .group-hover\:bg-blue-700,
        .group-hover\:text-gray-900,
        .hover\:scale-105 {
            transition: none;
        }
    }
</style>
{% endblock %}