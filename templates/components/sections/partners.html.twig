{# Section des partenaires #}
<section class="py-16 bg-white"
         x-data="{ activeCategory: 'all' }">
    <div class="container mx-auto px-4">
        {# Titre de la section #}
        <h2 class="text-3xl font-bold text-center mb-8">
            <i class="fas fa-handshake mr-2 text-blue-900"></i>
            <span>Nos Partenaires</span>
        </h2>

        {# Description #}
        <p class="text-center text-gray-600 max-w-2xl mx-auto mb-12">
            Découvrez les entreprises et organisations qui nous accompagnent dans cette aventure 
            et contribuent au succès de l'Africa QSHE Forum.
        </p>

        {# Filtres des catégories #}
        <div class="flex flex-wrap justify-center gap-4 mb-12">
            <button @click="activeCategory = 'all'"
                    :class="{ 'bg-blue-900 text-white': activeCategory === 'all', 'bg-gray-100 text-gray-700 hover:bg-gray-200': activeCategory !== 'all' }"
                    class="px-4 py-2 rounded-full font-medium transition-colors duration-300">
                Tous les partenaires
            </button>
            <button @click="activeCategory = 'institutionnel'"
                    :class="{ 'bg-blue-900 text-white': activeCategory === 'institutionnel', 'bg-gray-100 text-gray-700 hover:bg-gray-200': activeCategory !== 'institutionnel' }"
                    class="px-4 py-2 rounded-full font-medium transition-colors duration-300">
                Institutionnel
            </button>
            <button @click="activeCategory = 'diamond'"
                    :class="{ 'bg-blue-900 text-white': activeCategory === 'diamond', 'bg-gray-100 text-gray-700 hover:bg-gray-200': activeCategory !== 'diamond' }"
                    class="px-4 py-2 rounded-full font-medium transition-colors duration-300">
                Diamond
            </button>
            <button @click="activeCategory = 'gold'"
                    :class="{ 'bg-blue-900 text-white': activeCategory === 'gold', 'bg-gray-100 text-gray-700 hover:bg-gray-200': activeCategory !== 'gold' }"
                    class="px-4 py-2 rounded-full font-medium transition-colors duration-300">
                Gold
            </button>
            <button @click="activeCategory = 'silvers'"
                    :class="{ 'bg-blue-900 text-white': activeCategory === 'silvers', 'bg-gray-100 text-gray-700 hover:bg-gray-200': activeCategory !== 'silvers' }"
                    class="px-4 py-2 rounded-full font-medium transition-colors duration-300">
                Silvers
            </button>
            <button @click="activeCategory = 'bronze'"
                    :class="{ 'bg-blue-900 text-white': activeCategory === 'bronze', 'bg-gray-100 text-gray-700 hover:bg-gray-200': activeCategory !== 'bronze' }"
                    class="px-4 py-2 rounded-full font-medium transition-colors duration-300">
                Bronze
            </button>
        </div>

        {# Grille des partenaires #}
        <div class="partners-grid grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center mb-12">
            {# Institutionnels #}
            {% for i in 0..0 %}
                <div class="partner-logo"
                     x-show="activeCategory === 'all' || activeCategory === 'institutionnel'">
                    <div class="block relative overflow-hidden rounded-md bg-white p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
                        <img src="/images/partners/institutionnel-{{ i }}.jpg" 
                             alt="Partenaire Institutionnel {{ i + 1 }}" 
                             class="max-w-[150px] w-full h-auto"
                             loading="lazy">
                        <div class="absolute top-2 right-2">
                            <span class="bg-gradient-to-r from-blue-900 to-blue-700 text-white text-xs font-semibold px-2.5 py-0.5 rounded-full">
                                Institutionnel
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {# Diamond #}
            {% for i in 0..0 %}
                <div class="partner-logo"
                     x-show="activeCategory === 'all' || activeCategory === 'diamond'">
                    <div class="block relative overflow-hidden rounded-md bg-white p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
                        <img src="/images/partners/diamond-{{ i }}.jpg" 
                             alt="Partenaire Diamond {{ i + 1 }}" 
                             class="max-w-[150px] w-full h-auto"
                             loading="lazy">
                        <div class="absolute top-2 right-2">
                            <span class="bg-gradient-to-r from-purple-500 to-purple-400 text-white text-xs font-semibold px-2.5 py-0.5 rounded-full">
                                Diamond
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {# Gold #}
            {% for i in 0..1 %}
                <div class="partner-logo"
                     x-show="activeCategory === 'all' || activeCategory === 'gold'">
                    <div class="block relative overflow-hidden rounded-md bg-white p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
                        <img src="/images/partners/gold-{{ i }}.jpg" 
                             alt="Partenaire Gold {{ i + 1 }}" 
                             class="max-w-[150px] w-full h-auto"
                             loading="lazy">
                        <div class="absolute top-2 right-2">
                            <span class="bg-gradient-to-r from-yellow-400 to-yellow-300 text-yellow-900 text-xs font-semibold px-2.5 py-0.5 rounded-full">
                                Gold
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {# Silvers #}
            {% for i in 0..0 %}
                <div class="partner-logo"
                     x-show="activeCategory === 'all' || activeCategory === 'silvers'">
                    <div class="block relative overflow-hidden rounded-md bg-white p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
                        <img src="/images/partners/silver-{{ i }}.jpg" 
                             alt="Partenaire Silver {{ i + 1 }}" 
                             class="max-w-[150px] w-full h-auto"
                             loading="lazy">
                        <div class="absolute top-2 right-2">
                            <span class="bg-gradient-to-r from-gray-400 to-gray-300 text-gray-800 text-xs font-semibold px-2.5 py-0.5 rounded-full">
                                Silver
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {# Bronze #}
            {% for i in 0..0 %}
                <div class="partner-logo"
                     x-show="activeCategory === 'all' || activeCategory === 'bronze'">
                    <div class="block relative overflow-hidden rounded-md bg-white p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
                        <img src="/images/partners/bronze-{{ i }}.jpg" 
                             alt="Partenaire Bronze {{ i + 1 }}" 
                             class="max-w-[150px] w-full h-auto"
                             loading="lazy">
                        <div class="absolute top-2 right-2">
                            <span class="bg-gradient-to-r from-yellow-700 to-yellow-600 text-white text-xs font-semibold px-2.5 py-0.5 rounded-full">
                                Bronze
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Bouton d'action #}
        <div class="text-center">
            <a href="https://events-qualitas-ci.com/qshe25-b2b/public/" 
               class="inline-flex items-center bg-blue-900 hover:bg-blue-800 text-white font-bold py-3 px-6 rounded-md transition-colors duration-300"
               target="_blank"
               rel="noopener noreferrer">
                <i class="fas fa-handshake mr-2"></i>
                <span>Devenir Partenaire (Sponsor)</span>
            </a>
        </div>
    </div>
</section>

{# Styles spécifiques au composant #}
{% block component_styles %}
<style>
    .partner-logo img {
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

    .partner-logo:hover img {
        opacity: 1;
    }

    @media (prefers-reduced-motion: reduce) {
        .partner-logo img {
            transition: none;
        }
    }
</style>
{% endblock %}
