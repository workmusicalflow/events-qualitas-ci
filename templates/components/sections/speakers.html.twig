{# Section Intervenants #}
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">
            <i class="fas fa-users mr-2" aria-hidden="true"></i>Nos Intervenants
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for speaker in speakers %}
                {% include 'components/cards/speaker_card.html.twig' with { speaker: speaker } %}
            {% endfor %}
        </div>
        <div class="text-center mt-12">
            <a href="/intervenants" 
               class="bg-brand-blue hover:bg-brand-blue-dark text-white font-bold py-3 px-6 rounded-lg inline-block transition-colors duration-300">
                <i class="fas fa-users mr-2" aria-hidden="true"></i>
                <span>Découvrir la liste complète</span>
            </a>
        </div>
    </div>
</section>