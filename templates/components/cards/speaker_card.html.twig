{# Carte Intervenant #}
<article class="speaker-card bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="aspect-square overflow-hidden">
        <img src="{{ speaker.photo }}" 
             alt="{{ speaker.name }} - {{ speaker.position }} chez {{ speaker.company }}"
             class="w-full h-full object-cover"
             loading="lazy">
    </div>
    <div class="p-6">
        <h3 class="font-bold text-xl mb-2 text-brand-blue">{{ speaker.name }}</h3>
        <div class="space-y-2">
            <p class="text-gray-600 flex items-center">
                <i class="fas fa-briefcase mr-2 text-brand-blue/70" aria-hidden="true"></i>
                <span>{{ speaker.position }}</span>
            </p>
            <p class="text-brand-blue flex items-center">
                <i class="fas fa-building mr-2 text-brand-blue/70" aria-hidden="true"></i>
                <span>{{ speaker.company }}</span>
            </p>
        </div>
        {% if speaker.specialty is defined %}
            <div class="mt-4">
                <span class="inline-block bg-brand-blue/10 text-brand-blue text-sm px-3 py-1 rounded-full">
                    {{ speaker.specialty }}
                </span>
            </div>
        {% endif %}
        {% if speaker.social is defined %}
            <div class="mt-4 flex gap-3">
                {% if speaker.social.linkedin is defined %}
                    <a href="{{ speaker.social.linkedin }}" 
                       target="_blank"
                       rel="noopener noreferrer"
                       class="text-gray-500 hover:text-brand-blue transition-colors"
                       aria-label="Profil LinkedIn de {{ speaker.name }}">
                        <i class="fab fa-linkedin text-xl"></i>
                    </a>
                {% endif %}
                {% if speaker.social.twitter is defined %}
                    <a href="{{ speaker.social.twitter }}"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="text-gray-500 hover:text-brand-blue transition-colors"
                       aria-label="Profil Twitter de {{ speaker.name }}">
                        <i class="fab fa-twitter text-xl"></i>
                    </a>
                {% endif %}
            </div>
        {% endif %}
    </div>
</article>
