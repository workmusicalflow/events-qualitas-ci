{# Navigation principale #}
<nav class="bg-blue-900 text-white" x-data="{ isOpen: false }">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-4">
            {# Logo #}
            <a href="/" class="nav-logo">
                <picture>
                    <source srcset="/images/logo/logo-qshe.svg" type="image/svg+xml">
                    <img src="/images/logo/logo-qshe.png" 
                         alt="Logo Africa QSHE Forum">
                </picture>
            </a>
            
            {# Bouton Menu Mobile #}
            <button @click="isOpen = !isOpen" 
                    class="md:hidden focus:outline-none focus:ring-2 focus:ring-blue-200 rounded-lg p-2"
                    aria-label="Menu principal">
                <i class="fas fa-bars text-2xl"></i>
            </button>

            {# Menu Desktop #}
            <div class="hidden md:flex space-x-6">
                {% for item in menu.items %}
                    <a href="{{ item.url }}" 
                       class="hover:text-blue-200 transition-colors duration-200 py-2 px-3 rounded-lg hover:bg-blue-800"
                       {% if item.external %}target="_blank" rel="noopener noreferrer"{% endif %}>
                        {% if item.icon %}
                            <i class="fas fa-{{ item.icon }} mr-2"></i>
                        {% endif %}
                        {{ item.label }}
                    </a>
                {% endfor %}
            </div>
        </div>

        {# Menu Mobile #}
        {% include 'components/navigation/mobile-menu.html.twig' with {
            'items': menu.items
        } %}
    </div>
</nav>