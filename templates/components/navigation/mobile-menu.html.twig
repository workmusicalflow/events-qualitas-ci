{# Menu Mobile #}
<div class="md:hidden" 
     x-show="isOpen" 
     x-transition:enter="transition ease-out duration-200"
     x-transition:enter-start="opacity-0 transform scale-95"
     x-transition:enter-end="opacity-100 transform scale-100"
     x-transition:leave="transition ease-in duration-150"
     x-transition:leave-start="opacity-100 transform scale-100"
     x-transition:leave-end="opacity-0 transform scale-95"
     @click.away="isOpen = false">
    
    <div class="py-2 space-y-1">
        {% for item in items %}
            <a href="{{ item.url }}" 
               class="block px-4 py-3 text-base hover:bg-blue-800 hover:text-blue-200 transition-colors duration-200 rounded-lg"
               {% if item.external %}target="_blank" rel="noopener noreferrer"{% endif %}>
                <div class="flex items-center">
                    {% if item.icon %}
                        <i class="fas fa-{{ item.icon }} w-6"></i>
                    {% endif %}
                    <span>{{ item.label }}</span>
                    {% if item.external %}
                        <i class="fas fa-external-link-alt ml-2 text-sm opacity-75"></i>
                    {% endif %}
                </div>
            </a>
        {% endfor %}
    </div>

    {# Boutons d'action rapide #}
    <div class="mt-4 px-4 py-3 border-t border-blue-800">
        <div class="flex flex-col space-y-3">
            <a href="https://events-qualitas-ci.com/formulaire.html" 
               class="inline-flex items-center justify-center px-4 py-2 bg-yellow-500 hover:bg-yellow-600 text-blue-900 rounded-lg transition-colors duration-200">
                <i class="fas fa-id-badge mr-2"></i>
                Badge de participation
            </a>
            <a href="https://events-qualitas-ci.com/qshe25-b2b/public/" 
               class="inline-flex items-center justify-center px-4 py-2 bg-blue-700 hover:bg-blue-600 text-white rounded-lg transition-colors duration-200">
                <i class="fas fa-handshake mr-2"></i>
                Devenir Exposant
            </a>
        </div>
    </div>

