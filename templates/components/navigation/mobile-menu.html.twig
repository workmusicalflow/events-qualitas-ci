{# Menu Mobile - Version simplifiée #}
<div id="mobile-menu" 
     class="md:hidden bg-blue-800 mt-2 rounded-lg shadow-lg"
     x-show="isOpen"
     @click.away="isOpen = false">
    
    <div class="p-4 space-y-2">
        {# Liens de navigation #}
        {% for item in items %}
            <a href="{{ item.url }}" 
               class="block w-full px-4 py-3 rounded-lg {% if item.highlight %}bg-yellow-500 text-blue-900 hover:bg-yellow-400 font-bold{% else %}text-white hover:bg-blue-700{% endif %}"
               {% if item.external %}
                   target="_blank" 
                   rel="noopener noreferrer"
               {% endif %}>
                <div class="flex items-center">
                    <i class="fas fa-{{ item.icon }} w-6 {% if item.highlight %}text-blue-900{% else %}text-yellow-400{% endif %}"></i>
                    <span>{{ item.label }}</span>
                    {% if item.external %}
                        <i class="fas fa-external-link-alt ml-2 text-sm opacity-75"></i>
                    {% endif %}
                </div>
            </a>
        {% endfor %}

        {# Séparateur #}
        <div class="border-t border-blue-700 my-4"></div>

        {# Boutons d'action rapide #}
        <div class="space-y-2">
            <a href="https://events-qualitas-ci.com/formulaire.html" 
               class="block w-full text-center px-4 py-3 bg-yellow-500 hover:bg-yellow-400 text-blue-900 rounded-lg font-bold"
               target="_blank"
               rel="noopener noreferrer">
                <i class="fas fa-id-badge mr-2"></i>
                Badge de participation
            </a>
            <a href="https://events-qualitas-ci.com/qshe25-b2b/public/" 
               class="block w-full text-center px-4 py-3 bg-blue-700 hover:bg-blue-600 text-white rounded-lg font-bold"
               target="_blank"
               rel="noopener noreferrer">
                <i class="fas fa-handshake mr-2"></i>
                Devenir Exposant
            </a>
        </div>

        {# Informations de l'événement #}
        <div class="mt-4 p-4 bg-blue-900/50 rounded-lg">
            <div class="text-sm text-blue-200 space-y-2">
                <div class="flex items-center">
                    <i class="fas fa-calendar-alt text-yellow-400 w-6"></i>
                    <span>Du 8 au 10 mai 2025</span>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-map-marker-alt text-yellow-400 w-6"></i>
                    <span>Sofitel Abidjan Hôtel Ivoire</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Transitions simples pour les interactions */
    #mobile-menu a {
        transition: background-color 0.2s;
    }

    @media (prefers-reduced-motion: reduce) {
        #mobile-menu a {
            transition: none;
        }
    }
</style>