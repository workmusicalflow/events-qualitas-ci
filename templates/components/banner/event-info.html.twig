{# Informations de l'événement #}
<div class="event-info-box mt-12 p-8 rounded-lg backdrop-blur-md">
    <div class="flex flex-col md:flex-row items-center justify-center space-y-6 md:space-y-0 md:space-x-12">
        {# Date de l'événement #}
        <div class="event-info-item">
            <div class="info-icon text-yellow-400 bg-white/10 rounded-full p-4">
                <i class="fas fa-calendar-alt text-2xl"></i>
            </div>
            <div class="text-left mt-4 md:mt-0 md:ml-4">
                <span class="block text-sm uppercase tracking-wide text-yellow-200 font-medium">Date</span>
                <span class="font-bold text-lg">{{ date }}</span>
            </div>
        </div>

        {# Lieu de l'événement #}
        <div class="event-info-item">
            <div class="info-icon text-yellow-400 bg-white/10 rounded-full p-4">
                <i class="fas fa-map-marker-alt text-2xl"></i>
            </div>
            <div class="text-left mt-4 md:mt-0 md:ml-4">
                <span class="block text-sm uppercase tracking-wide text-yellow-200 font-medium">Lieu</span>
                <span class="font-bold text-lg">{{ location }}</span>
            </div>
        </div>
    </div>

    {# Indicateur de défilement #}
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block">
        <div class="text-white/60 text-sm">
            <i class="fas fa-chevron-down"></i>
            <span class="sr-only">Défiler vers le bas</span>
        </div>
    </div>
</div>

{# Styles spécifiques au composant #}
{% block component_styles %}
<style>
    .event-info-item {
        position: relative;
        display: flex;
        flex-direction: column;
        md:flex-direction: row;
        align-items: center;
        transition: transform 0.3s ease;
    }

    .event-info-item:hover {
        transform: translateY(-2px);
    }

    .info-icon {
        transition: all 0.3s ease;
    }

    .event-info-item:hover .info-icon {
        background-color: rgba(255, 255, 255, 0.2);
        transform: scale(1.1);
    }

    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .animate-bounce {
        animation: bounce 2s infinite;
    }
</style>
{% endblock %}