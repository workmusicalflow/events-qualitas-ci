{# Banner Section #}
<section class="bg-brand-blue relative overflow-hidden">
    <div class="container mx-auto px-4 py-16">
        <div class="grid md:grid-cols-2 gap-8 items-center">
            {# Left Content #}
            <div class="text-white space-y-8">
                {# Main Title #}
                <h1 class="text-5xl font-bold text-white mb-4">
                    Africa QSHE Forum 2025
                </h1>

                {# Subtitle #}
                <p class="text-xl text-white opacity-90">
                    {{ event.presentation.intro }}
                </p>

                {# Theme #}
                <div class="py-6">
                    <h2 class="text-2xl font-semibold text-brand-gold leading-relaxed">
                        {{ event.theme.main }}
                    </h2>
                    <p class="text-xl text-brand-gold opacity-90 mt-2">
                        {{ event.theme.pillars|join(', ')|lower }}
                    </p>
                </div>

                {# Event Details Box #}
                <div class="bg-brand-blue-dark bg-opacity-50 backdrop-blur-sm rounded-lg p-6 space-y-4">
                    {# Date #}
                    <div class="flex items-center gap-4">
                        <div class="w-8 h-8 flex items-center justify-center">
                            <i class="fas fa-calendar text-brand-gold text-2xl"></i>
                        </div>
                        <div>
                            <span class="text-brand-gold text-sm uppercase tracking-wider">DATE</span>
                            <p class="text-white font-medium">{{ event.dates }}</p>
                        </div>
                    </div>

                    {# Location #}
                    <div class="flex items-center gap-4">
                        <div class="w-8 h-8 flex items-center justify-center">
                            <i class="fas fa-map-marker-alt text-brand-gold text-2xl"></i>
                        </div>
                        <div>
                            <span class="text-brand-gold text-sm uppercase tracking-wider">LIEU</span>
                            <p class="text-white font-medium">{{ event.location.venue }}, {{ event.location.area }}</p>
                        </div>
                    </div>
                </div>

                {# CTA Button #}
                <div class="pt-4">
                    <a href="https://events-qualitas-ci.com/qshe25-b2b/public/" 
                       class="inline-flex items-center justify-center gap-2 bg-brand-gold hover:bg-brand-gold-dark text-brand-blue font-bold py-4 px-8 rounded-lg transition-colors duration-300">
                        <i class="fas fa-user-plus"></i>
                        <span>Devenir Exposant</span>
                    </a>
                </div>
            </div>

            {# Right Image #}
            <div class="hidden md:block">
                <div class="rounded-2xl overflow-hidden shadow-lg">
                    <img src="/images/banner/workers.jpg" 
                         alt="Professionnels QSHE en action" 
                         class="w-full h-[400px] object-cover"
                         loading="eager">
                </div>
            </div>
        </div>
    </div>
</section>
