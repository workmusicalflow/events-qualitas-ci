{# Section Bannière #}
<section class="banner-section py-16" aria-label="Bannière principale du forum">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            {# Contenu Gauche #}
            <div class="banner-content space-y-8">
                {# Titre Principal #}
                <h1 class="banner-title text-5xl md:text-6xl font-bold mt-8" aria-label="Titre principal">
                    Africa QSHE Forum 2025
                </h1>
                
                {# Sous-titre #}
                <p class="banner-subtitle text-xl" aria-label="Sous-titre">
                    {{ event.presentation.intro }}
                </p>

                {# Bloc Thème #}
                <div class="theme-box rounded-lg p-6" aria-labelledby="theme-heading">
                    <h2 id="theme-heading" class="theme-heading text-2xl font-semibold leading-relaxed mb-2">
                        {{ event.theme.main }}
                    </h2>
                    <p class="text-white/80">
                        {{ event.theme.pillars|join(' • ')|lower }}
                    </p>
                </div>

                {# Cartes Détails #}
                <div class="event-card rounded-lg p-6 space-y-4" role="region" aria-label="Détails de l'événement">
                    {# Date #}
                    <div class="flex items-center gap-4">
                        <div class="icon-container w-12 h-12 flex items-center justify-center rounded-full">
                            <i class="fas fa-calendar text-2xl"></i>
                        </div>
                        <div class="event-info">
                            <span class="event-label text-sm uppercase tracking-wider">DATE</span>
                            <p class="event-value font-medium">{{ event.dates }}</p>
                        </div>
                    </div>

                    {# Lieu #}
                    <div class="flex items-center gap-4">
                        <div class="icon-container w-12 h-12 flex items-center justify-center rounded-full">
                            <i class="fas fa-map-marker-alt text-2xl"></i>
                        </div>
                        <div class="event-info">
                            <span class="event-label text-sm uppercase tracking-wider">LIEU</span>
                            <p class="event-value font-medium">{{ event.location.venue }}, {{ event.location.area }}</p>
                        </div>
                    </div>
                </div>

                {# CTA #}
                <div class="pt-4">
                    <a href="https://events-qualitas-ci.com/qshe25-b2b/public/" 
                       class="cta-button inline-flex items-center justify-center gap-3 font-bold py-4 px-8 rounded-lg"
                       aria-label="Devenir exposant">
                        <i class="fas fa-user-plus"></i>
                        <span>Devenir Exposant</span>
                    </a>
                </div>
            </div>

            {# Image Parallaxe #}
            <div class="hidden md:block">
                <div class="rounded-2xl overflow-hidden shadow-xl" role="img" aria-label="Professionnels QSHE en action">
                    <img src="/images/banner/workers.jpg" 
                         alt=""
                         class="w-full h-[500px] object-cover"
                         loading="eager">
                </div>
            </div>
        </div>
    </div>
</section>
